{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@/*": [
        "src/renderer/src/*"
      ],
      "@/shared/*": [
        "src/renderer/src/shared/*"
      ],
      "@/entities/*": [
        "src/renderer/src/entities/*"
      ],
      "@/features/*": [
        "src/renderer/src/features/*"
      ],
      "@/app/*": [
        "src/renderer/src/app/*"
      ]
    }
  }
}
